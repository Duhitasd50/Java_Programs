//QUESTION:WE HAVE A DOG THAT LIKES TO BARK.WE NEED TO WAKE UP IF THE DOG IS BARKING AT NIGHT!
//WE HAVE TO WAKEUP IF THE DOG ID BARKING BEOFRE 8:00AM OR AFTER 22:00HOUR

//FINAL SOLUTION
public class BarkingDog {
public static boolean bark(boolean barking, int hourOfDay)
	 {
	    if (barking)
	    {
	    if (hourOfDay <0 || hourOfDay >23)
	    	{
	    		return false;
	    	}
	    	else if(hourOfDay < 8 || hourOfDay >22)
	    	{
	    		return true;
	    	}
	    }
	    return false;
	 }
} 
//=====================================================================================================
//TRIALS:1

package com.company;

public class Main {

    public static void main(String[] args) {


    }
    public static void bark(){

        boolean barking = true;
        int hourOfDay = (23);

        if(hourOfDay > 8 || hourOfDay < 22){

            System.out.println("wake up the dog is barking");


        }else if(hourOfDay < 0  || hourOfDay > 23){

            System.out.println("baalala");
        }
    }
}
